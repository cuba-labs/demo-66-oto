<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.demo.web.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.demo.web.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="com.company.demo.entity.Customer"
                    view="customer-view">
            <datasource id="detailsDs"
                        property="details">
                <collectionDatasource id="phonesDs"
                                      property="phones"/>
            </datasource>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field property="name"/>
                <field property="email"/>
                <field property="details"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
